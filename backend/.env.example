# Application Configuration
APP_NAME=Server Building Dashboard
ENVIRONMENT=dev

# Security - GENERATE A SECURE SECRET KEY
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-this-in-production

# Session Configuration
SESSION_LIFETIME_SECONDS=28800
COOKIE_DOMAIN=

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Frontend URL
FRONTEND_URL=http://localhost:5173

# SAML2 Configuration
SAML_METADATA_PATH=./saml_metadata/idp_metadata.xml
SAML_ACS_URL=https://your-backend-domain.com/api/auth/callback

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Logging
# LOG_LEVEL options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Use DEBUG to enable detailed preconfig push logging (logged to preconfig.log)
# Use INFO for normal production logging
LOG_LEVEL=INFO
LOG_DIR=/var/log/server-building-dashboard

# Build Logs Configuration
# Path to directory containing server build log files (.log extension)
# Each log file should be named {hostname}.log
# Example: /var/log/server-builds or ./build_logs
BUILD_LOGS_DIR=./build_logs

# Hostname Validation Pattern (regex)
# Default: ^[a-zA-Z0-9._-]+$ (alphanumeric, dots, hyphens, underscores)
# This pattern is used to validate hostnames and prevent path traversal attacks
# Examples:
#   - ^[a-zA-Z0-9._-]+$ (default - flexible)
#   - ^[a-z]{3}-srv-[0-9]{3}$ (strict format: cbg-srv-001)
#   - ^[a-z]{2}-[0-9]{5}-[0-9]{2}$ (strict format: th-12345-45)
HOSTNAME_PATTERN=^[a-zA-Z0-9._-]+$

# Database (MySQL 8.0+)
# Format: mysql+aiomysql://user:password@host:port/database
# Example production: mysql+aiomysql://prod_user:secure_pass@mysql.production.example.com:3306/server_dashboard_prod
# Example development (Docker): mysql+aiomysql://dashboard_user:dashboard_dev_pass@mysql-dev:3306/server_dashboard_dev
# Example development (local): mysql+aiomysql://dashboard_user:dashboard_dev_pass@localhost:3306/server_dashboard_dev
# Leave empty or commented out to run without database (uses mock data)
#DATABASE_URL=mysql+aiomysql://user:password@host:3306/database_name

# Database Connection Pool Settings (optional, defaults in code)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
DB_POOL_TIMEOUT=30

# Preconfig API Configuration
# External API endpoint to fetch preconfigs from
PRECONFIG_API_ENDPOINT=https://external-preconfig-api.example.com/preconfigs
# Pre-shared key for authenticating with the preconfig API
PRECONFIG_API_PSK=your-psk-here

# Build Server Push Configuration
# Domain suffix for build servers (e.g., ".internal.example.com")
# Full URL constructed as: https://{build_server}{BUILD_SERVER_DOMAIN}/preconfig
# Example: https://cbg-build-01.internal.example.com/preconfig
BUILD_SERVER_DOMAIN=.internal.example.com
# Timeout in seconds for HTTP requests to build servers
BUILD_SERVER_TIMEOUT=30
